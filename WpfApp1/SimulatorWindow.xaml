<Window x:Class="PL.SimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SimulatorWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="timerTextBlock" Text="{Binding}" FontSize="25" TextAlignment="cENTER"  Foreground="#FF37F10E" Margin="470,28,26,350"/>
        <Button x:Name="stop" Content="Stop" HorizontalAlignment="Left" Margin="594,131,0,0" VerticalAlignment="Top" Background="{StaticResource myLinearGradientBrush}" Click="stop_Click"/>
    </Grid>
</Window>
